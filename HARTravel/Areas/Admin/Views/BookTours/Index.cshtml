@model IEnumerable<HARTravel.Models.BookTour>

@{
    ViewBag.Title = "Index";
}

<h2>@Session["EmpId"]</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Numbers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Voucher)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.LoginName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status.StatusName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tour.TourName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Numbers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Voucher)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.LoginName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status.StatusName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tour.TourName)
        </td>
        <td>            
            @Html.ActionLink("Details", "Details", new { id=item.Id })
             @if (item.Status.StatusName == "Pending")
             {
                    <span> | </span>
                    @Html.ActionLink("Confirm", "Confirm", new { id = item.Id })

             }
             @if(item.Status.StatusName == "Pending" && Session["EmpId"].ToString() == "1")
             {
                 <span> | </span>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
             }
        </td>
    </tr>
}

</table>
