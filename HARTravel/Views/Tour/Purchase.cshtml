@model HARTravel.Models.Tour


<main>
    <div class="hero_in cart_section">
        <div class="wrapper">
            <div class="container">
                <div class="bs-wizard clearfix">
                    <div class="bs-wizard-step">
                        <div class="text-center bs-wizard-stepnum">Tour Detail</div>
                        <div class="progress">
                            <div class="progress-bar"></div>
                        </div>
                        <a href="cart-1.html" class="bs-wizard-dot"></a>
                    </div>

                    <div class="bs-wizard-step active">
                        <div class="text-center bs-wizard-stepnum">Informations</div>
                        <div class="progress">
                            <div class="progress-bar"></div>
                        </div>
                        <a href="#0" class="bs-wizard-dot"></a>
                    </div>

                    <div class="bs-wizard-step disabled">
                        <div class="text-center bs-wizard-stepnum">Finish!</div>
                        <div class="progress">
                            <div class="progress-bar"></div>
                        </div>
                        <a href="#0" class="bs-wizard-dot"></a>
                    </div>
                </div>
                <!-- End bs-wizard -->
            </div>
        </div>
    </div>
    <!--/hero_in-->
    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <form autocomplete="off" method="post" novalidate>
            <div class="bg_color_1">
                <div class="container margin_60_35">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="box_cart">
                                <div class="message">
                                    <p>Exisitng Customer? <a href="#0">Click here to login</a></p>
                                </div>
                                <div class="form_title">
                                    <h3><strong>1</strong>Tour Info</h3>
                                </div>
                                <br>
                                <table class="table table-striped cart-list">
                                    <thead>
                                        <tr>
                                            <th>
                                                Tên tour
                                            </th>
                                            <th>
                                                Mô tả
                                            </th>
                                            <th>
                                                Địa điểm
                                            </th>
                                            <th>
                                                Giá/người
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(model => model.TourName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.DaysOfTour)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => model.Description)
                                            </td>
                                            <td>
                                                <strong>@Model.Price.ToString("N0") VNĐ</strong>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            @if (Session["CusId"] != null)
                            {
                                <div class="box_cart">

                                    <div class="form_title">
                                        <h3><strong>2</strong>Thông tin khách hàng</h3>
                                        <p>
                                            Khách hàng vui lòng nhập tất cả thông tin ở các ô bên dưới.
                                        </p>
                                    </div>
                                    <div class="step">
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Your name</label>
                                                    <input type="text" class="form-control" id="firstname_booking" name="CusName" value="@Session["CusName"]">
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Telephone</label>
                                                    <input type="text" id="telephone_booking" name="CusPhone" class="form-control" value="@Session["Phone"]">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Email</label>
                                                    <input type="email" id="email_booking" name="CusEmail" class="form-control" value="@Session["Email"]">
                                                    @ViewBag.Message
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Confirm email</label>
                                                    <input type="email" id="email_booking_2" name="email_booking_2" class="form-control">
                                                </div>
                                            </div>

                                        </div>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Numbers</label>
                                                    <input type="text" id="" name="number" class="form-control">
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Time</label>
                                                    <input type="text" id="" name="dayStart" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            @if (Model.Voucher == true)
                                            {
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <label>Voucher</label>
                                                        <input type="text" id="" name="voucher" class="form-control">
                                                    </div>
                                                </div>
                                            }




                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Note</label>
                                                    <input type="text" id="" name="note" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                    <!--End step -->

                                </div>
                            }
                            else
                            {
                                <div class="box_cart">

                                    <div class="form_title">
                                        <h3><strong>2</strong>Thông tin khách hàng</h3>
                                        <p>
                                            Khách hàng vui lòng nhập tất cả thông tin ở các ô bên dưới.
                                        </p>
                                    </div>
                                    <div class="step">
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Your name</label>
                                                    <input type="text" class="form-control" id="firstname_booking" name="CusName">
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Telephone</label>
                                                    <input type="text" id="telephone_booking" name="CusPhone" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Email</label>
                                                    <input type="email" id="email_booking" name="CusEmail" class="form-control">
                                                    @ViewBag.Message
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Confirm email</label>
                                                    <input type="email" id="email_booking_2" name="email_booking_2" class="form-control">
                                                </div>
                                            </div>

                                        </div>
                                        
                                        <div class="row">

                                            @if (Model.Voucher == true)
                                            {
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <label>Voucher</label>
                                                        <input type="text" id="" name="voucher" class="form-control">
                                                    </div>
                                                </div>
                                            }


                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <label>Note</label>
                                                    <input type="text" id="note" name="note" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                    <!--End step -->

                                </div>
                            }


                        </div>
                        <aside class="col-lg-4" id="sidebar">
                            <div class="box_detail">
                                <div id="total_cart">
                                    Total <span class="float-right">69.00$</span>
                                </div>
                                <ul class="cart_details">
                                    <li>
                                        <div class="form-group">
                                            <label>Numbers</label>
                                            <input type="text" id="number" name="number" class="form-control">
                                        </div>
                                    </li>
                                    <li>
                                        <div class="form-group">
                                            <label>Time</label>
                                            <input type="text" id="dayStart" name="dayStart" class="form-control">
                                        </div>
                                    </li>
                                </ul>
                                @*@Html.ActionLink("Confirm", "Finish", null, new { @class = "btn_1 full-width purchase" })*@
                                <button type="submit" class="btn_1 full-width purchase">Submit</button>
                                <div class="text-center"><small>No money charged in this step</small></div>
                            </div>
                        </aside>
                    </div>
                </div>
            </div>
        </form>

    }

</main>


